@model TeamFlow.Web.Models.MessageComposeViewModel
@{
    ViewData["Title"] = "Compose";
    var recipients = ViewData["Recipients"] as List<TeamFlow.Web.Models.ApplicationUser> ?? new();
}

<div class="page-header">
    <div>
        <h1>Compose</h1>
        <p class="muted">Send a message to anyone in your organization.</p>
    </div>
</div>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-section">
        <div class="form-group">
            <label asp-for="RecipientId">To</label>
            <select asp-for="RecipientId" class="select">
@foreach (var user in recipients)
{
            var displayName = string.Join(" ", new[] { user.FirstName, user.LastName }.Where(s => !string.IsNullOrWhiteSpace(s)));
            <option value="@user.Id">@($"{(string.IsNullOrWhiteSpace(displayName) ? user.Email : displayName)} ({user.Email})")</option>
}
            </select>
            <span asp-validation-for="RecipientId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" class="input" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="textarea" rows="6"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
    </div>
    <div class="actions actions-right">
        <button type="submit" class="btn btn-primary">Send</button>
        <a asp-action="Inbox" class="btn btn-secondary">Cancel</a>
    </div>
</form>
