@model IEnumerable<TeamFlow.Web.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h1>Teams</h1>

<p>
    <a asp-action="Create">Create team</a>
</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var team in Model)
{
        <tr>
            <td>@team.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@team.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@team.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
