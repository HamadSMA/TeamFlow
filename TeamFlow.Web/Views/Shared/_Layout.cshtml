<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeamFlow.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TeamFlow.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar">
            <partial name="_Sidebar" />
        </aside>
        <div class="main">
            <partial name="_Topbar" />
            <main class="content">
                @if (TempData["StatusError"] != null)
                {
                    <div class="alert alert-danger">@TempData["StatusError"]</div>
                }
                @if (TempData["StatusSuccess"] != null)
                {
                    <div class="alert alert-success">@TempData["StatusSuccess"]</div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
