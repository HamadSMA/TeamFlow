@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
    var isAdmin = User.IsInRole("Admin");
    string Active(string name) => controller.Equals(name, StringComparison.OrdinalIgnoreCase) ? "nav-link active" : "nav-link";
}

<div class="brand">TeamFlow</div>
<nav class="nav-vertical">
    <a class="@Active("Dashboard")" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
    <a class="@Active("Status")" asp-controller="Status" asp-action="Index">Status</a>
    <a class="@Active("Messages")" asp-controller="Messages" asp-action="Inbox">Messages</a>
    @if (isAdmin)
    {
        <a class="@Active("Teams")" asp-controller="Teams" asp-action="Index">Teams</a>
        <a class="@Active("Users")" asp-controller="Users" asp-action="Index">Users</a>
        <a class="@Active("Settings")" asp-controller="Settings" asp-action="Index">Settings</a>
    }
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="nav-logout" data-confirm="Are you sure you want to log out?">
        @Html.AntiForgeryToken()
        <button type="submit" class="nav-link">Logout</button>
    </form>
</nav>
