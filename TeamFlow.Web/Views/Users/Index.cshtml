@model IEnumerable<TeamFlow.Web.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Team</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
        <tr>
            <td>@user.Email</td>
            <td>@(user.Team?.Name ?? "Unassigned")</td>
            <td>@(user.IsActive ? "Yes" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id">Assign team</a>
                <form asp-action="ToggleActive" asp-route-id="@user.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit">
                        @(user.IsActive ? "Deactivate" : "Activate")
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
