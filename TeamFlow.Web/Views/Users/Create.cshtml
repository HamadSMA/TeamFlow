@model TeamFlow.Web.Models.AdminCreateUserViewModel

@{
    ViewData["Title"] = "Create User";
    var teams = ViewData["Teams"] as List<TeamFlow.Web.Models.Team> ?? new();
}

<div class="page-header">
    <div>
        <h1>Create User</h1>
        <p class="muted">Generate credentials and assign a team.</p>
    </div>
</div>

@if (ViewData["GeneratedEmail"] != null)
{
    <div class="alert alert-success">
        Generated credentials:
        <strong>@ViewData["GeneratedEmail"]</strong> /
        <strong>@ViewData["GeneratedPassword"]</strong>
    </div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-section">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="input" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="input" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TeamId">Team</label>
            <select asp-for="TeamId" class="select">
                <option value="">Unassigned</option>
@foreach (var team in teams)
{
                <option value="@team.Id">@team.Name</option>
}
            </select>
        </div>
        <div class="form-group">
            <div class="checkbox-group">
                <input asp-for="IsActive" type="checkbox" />
                <label asp-for="IsActive"></label>
            </div>
        </div>
    </div>
    <div class="actions actions-right">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>
