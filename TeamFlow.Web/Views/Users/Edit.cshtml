@model TeamFlow.Web.Models.UserTeamEditViewModel

@{
    ViewData["Title"] = "Assign Team";
}

<div class="page-header">
    <div>
        <h1>Assign Team</h1>
        <p class="muted">Update team membership for this user.</p>
    </div>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-section">
        <p><strong>User:</strong> @Model.Email</p>
        <div class="form-group">
            <label asp-for="TeamId">Team</label>
            <select asp-for="TeamId" class="select">
                <option value="">Unassigned</option>
@foreach (var team in Model.Teams)
{
                <option value="@team.Id">@team.Name</option>
}
            </select>
        </div>
    </div>
    <div class="actions actions-right">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>
