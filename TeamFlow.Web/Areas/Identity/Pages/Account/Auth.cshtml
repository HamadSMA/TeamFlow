@page
@model TeamFlow.Web.Areas.Identity.Pages.Account.AuthModel

@{
    ViewData["Title"] = "Welcome";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1>Welcome</h1>
        <p class="muted">Sign in</p>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
            <li>@error.ErrorMessage</li>
}
        </ul>
    </div>
}

<div class="auth-panels">
    <section class="auth-panel is-active" data-panel="login">
        <form method="post" asp-page="./Auth" asp-page-handler="Login">
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-section">
                <div class="form-group">
                    <label asp-for="LoginInput.Email"></label>
                    <input asp-for="LoginInput.Email" class="input" autocomplete="username" />
                    <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoginInput.Password"></label>
                    <input asp-for="LoginInput.Password" class="input" autocomplete="current-password" />
                    <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="checkbox-group">
                        <input asp-for="LoginInput.RememberMe" type="checkbox" />
                        <span>@Html.DisplayNameFor(m => m.LoginInput.RememberMe)</span>
                    </label>
                </div>
            </div>
            <div class="actions actions-right">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
